<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @product.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@product.photo, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <p>Some awesome description of our amazing product.</p>
      <<p>Pre√ßo: <%= humanized_money_with_symbol(@product.price) %></p>
    </div>
  </div>
  <%= form_tag orders_path do %>
    <%= hidden_field_tag 'product_id', @product.id %>
    <%= submit_tag 'Comprar', class: 'btn btn-primary' %>
  <% end %>
</div>




